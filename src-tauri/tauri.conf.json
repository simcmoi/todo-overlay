{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "ToDo Overlay",
  "version": "0.1.0",
  "identifier": "com.simon.todooverlay",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "ToDo Overlay",
        "width": 420,
        "height": 520,
        "minWidth": 420,
        "minHeight": 520,
        "maxWidth": 420,
        "maxHeight": 520,
        "resizable": false,
        "fullscreen": false,
        "maximizable": false,
        "minimizable": false,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": false,
        "center": true,
        "focus": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
